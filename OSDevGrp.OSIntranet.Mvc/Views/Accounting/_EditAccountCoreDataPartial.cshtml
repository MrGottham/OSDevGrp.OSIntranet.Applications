@model AccountCoreDataViewModel;
<div class="form-group">
	<label asp-for="Description"></label>
    @if (Model.IsProtected == false)
    {
	    <input asp-for="Description" class="form-control" />
	    <span asp-validation-for="Description" class="text-danger"></span>
    }
    else
    {
        <input asp-for="Description" class="form-control" readonly />
    }
</div>
<div class="form-group">
	<label asp-for="Note"></label>
    @if (Model.IsProtected == false)
    {
	    @Html.EditorFor(m => m.Note, new { htmlAttributes = new { @class = "form-control" } })
	    <span asp-validation-for="Note" class="text-danger"></span>
    }
    else
    {
        @Html.EditorFor(m => m.Note, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    }
</div>