@model IEnumerable<BudgetAccountGroupViewModel>;
@{
    ViewData["Title"] = "Budgetkontogrupper";
}

<div class="row">
    <div class="col-xl-1">
    </div>
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-10">
        <h2>Budgetkontogrupper</h2>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nummer</th>
                        <th>Navn</th>
                        <th><a asp-area="" asp-controller="Accounting" asp-action="CreateBudgetAccountGroup"><i class="fas fa-plus"></i></a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (BudgetAccountGroupViewModel budgetAccountGroupViewModel in @Model)
                    {
                        <tr>
                            <td>@budgetAccountGroupViewModel.Number</td>
                            <td>@budgetAccountGroupViewModel.Name</td>
                            <td>
                                <span class="fa-stack">
                                    <a asp-area="" asp-controller="Accounting" asp-action="UpdateBudgetAccountGroup" asp-route-number="@budgetAccountGroupViewModel.Number"><i class="fas fa-pen"></i></a>
                                    @if (budgetAccountGroupViewModel.Deletable)
                                    {
                                        <a href="#" onclick="javascript:$().askForDeletion('Slet budgetkontogruppe', $('form[id=@(budgetAccountGroupViewModel.Number)]'));"><i class="fas fa-trash"></i></a>
                                    }
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            @if (Model.Any(budgetAccountGroupViewModel => budgetAccountGroupViewModel.Deletable))
            {
                foreach (BudgetAccountGroupViewModel deletableBudgetAccountGroupViewModel in Model.Where(m => m.Deletable))
                {
                    <form id="@deletableBudgetAccountGroupViewModel.Number" asp-area="" asp-controller="Accounting" asp-action="DeleteBudgetAccountGroup" asp-route-number="@deletableBudgetAccountGroupViewModel.Number" method="post">
                    </form>
                }
            }
        </div>
    </div>
    <div class="col-xl-1">
    </div>
</div>