            <a class="btn btn-secondary" asp-controller="Common" asp-action="LetterHeads">Fortryd</a>
        </form>
    </div>
    <div class="col-xl-1 d-none d-xl-block">
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}