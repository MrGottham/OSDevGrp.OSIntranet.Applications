@model LetterHeadViewModel;
@{
    ViewData["Title"] = "Opret brevhoved";
}

<div class="row">
    <div class="col-xl-1 d-none d-xl-block">
    </div>
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-10">
        <h2>Opret brevhoved</h2>
        <form asp-area="" asp-controller="Common" asp-action="CreateLetterHead" method="post">
