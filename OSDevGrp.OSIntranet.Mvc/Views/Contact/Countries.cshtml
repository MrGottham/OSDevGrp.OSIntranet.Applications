@model IEnumerable<CountryViewModel>;
@{
    ViewData["Title"] = "Landekoder";
}

<div class="row">
    <div class="col-xl-1 d-none d-xl-block">
    </div>
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-10">
        <h2>Landekoder</h2>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Landekode</th>
                        <th>Navn</th>
                        <th>Landekode (telefon)</th>
                        <th><a asp-area="" asp-controller="Contact" asp-action="CreateCountry"><i class="fas fa-plus"></i></a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CountryViewModel countryViewModel in Model)
                    {
                        <tr>
                            <td>@countryViewModel.Code</td>
                            <td>@countryViewModel.Name</td>
                            <td>@countryViewModel.PhonePrefix</td>
                            <td>
                                <span class="fa-stack">
                                    <a asp-area="" asp-controller="Contact" asp-action="UpdateCountry" asp-route-code="@countryViewModel.Code"><i class="fas fa-pen"></i></a>
                                    @if (countryViewModel.Deletable)
                                    {
                                        <a href="#" onclick="javascript:$().askForDeletion('Slet landekode', '@(countryViewModel.GetDeletionLink(Url))', @(countryViewModel.GetDeletionData(Html)), $(this).parent().parent().parent());"><i class="fas fa-trash"></i></a>
                                    }
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-xl-1 d-none d-xl-block">
    </div>
</div>