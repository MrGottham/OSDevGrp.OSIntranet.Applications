@model IEnumerable<ContactGroupViewModel>;
@{
    ViewData["Title"] = "Kontaktgrupper";
}

<div class="row">
    <div class="col-xl-1 d-none d-xl-block">
    </div>
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-10">
        <h2>Kontaktgrupper</h2>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nummer</th>
                        <th>Navn</th>
                        <th><a asp-area="" asp-controller="Contact" asp-action="CreateContactGroup"><i class="fas fa-plus"></i></a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ContactGroupViewModel contactGroupViewModel in Model)
                    {
                        <tr>
                            <td>@contactGroupViewModel.Number</td>
                            <td>@contactGroupViewModel.Name</td>
                            <td>
                                <span class="fa-stack">
                                    <a asp-area="" asp-controller="Contact" asp-action="UpdateContactGroup" asp-route-number="@contactGroupViewModel.Number"><i class="fas fa-pen"></i></a>
                                    @if (contactGroupViewModel.Deletable)
                                    {
                                        <a href="#" onclick="javascript:$().askForDeletion('Slet kontaktgruppe', '@(contactGroupViewModel.GetDeletionLink(Url))', @(contactGroupViewModel.GetDeletionData(Html)), $(this).parent().parent().parent());"><i class="fas fa-trash"></i></a>
                                    }
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-xl-1 d-none d-xl-block">
    </div>
</div>