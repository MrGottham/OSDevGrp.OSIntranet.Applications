@model PostalCodeViewModel;
<input type="hidden" asp-for="EditMode" />
<div class="form-row">
    <div class="form-group col-4 col-sm-4 col-md-4 col-lg-2 col-xl-2">
        <label asp-for="Country.Code"></label>
        <input asp-for="Country.Code" class="form-control" readonly />
    </div>
    <div class="form-group col-8 col-sm-8 col-md-8 col-lg-10 col-xl-10">
        <label asp-for="Country.Name"></label>
        <input asp-for="Country.Name" class="form-control" readonly />
    </div>
</div>
<input type="hidden" asp-for="Country.UniversalName" />
<input type="hidden" asp-for="Country.PhonePrefix" />
@if (Model.EditMode == EditMode.Create)
{
    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
}
else
{
    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" readonly />
    </div>
}
<div class="form-group">
    <label asp-for="City"></label>
    <input asp-for="City" class="form-control" />
    <span asp-validation-for="City" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="State"></label>
    <input asp-for="State" class="form-control" />
    <span asp-validation-for="State" class="text-danger"></span>
</div>