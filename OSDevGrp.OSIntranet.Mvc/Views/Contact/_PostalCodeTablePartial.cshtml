@model IEnumerable<PostalCodeViewModel>;
    
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Postnummer</th>
                <th>By</th>
                <th><a asp-area="" asp-controller="Contact" asp-action="CreatePostalCode" asp-route-countryCode="@ViewData["CountryCode"]"><i class="fas fa-plus"></i></a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (PostalCodeViewModel postalCodeViewModel in Model)
            {
                <tr>
                    <td>@postalCodeViewModel.Code</td>
                    <td>@postalCodeViewModel.City</td>
                    <td>
                        <span class="fa-stack">
                            <a asp-area="" asp-controller="Contact" asp-action="UpdatePostalCode" asp-route-countryCode="@postalCodeViewModel.Country.Code" asp-route-postalCode="@postalCodeViewModel.Code"><i class="fas fa-pen"></i></a>
                            @if (postalCodeViewModel.Deletable)
                            {
                                <a href="#" onclick="javascript:$().askForDeletion('Slet landekode', '@(postalCodeViewModel.GetDeletionLink(Url))', @(postalCodeViewModel.GetDeletionData(Html)), $(this).parent().parent().parent());"><i class="fas fa-trash"></i></a>
                            }
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>