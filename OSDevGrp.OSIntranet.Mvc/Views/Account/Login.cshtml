@using System;
@model Uri;
@{
    ViewData["Title"] = "Log ind";
}

<div class="row">
    <div class="col-md-2 col-lg-2 col-xl-3">
    </div>
    <div class="col-6 col-sm-6 col-md-4 col-lg-4 col-xl-3 d-flex">
        <div class="card">
            <div class="card-body">
                <p class="card-text">Log ind med en Microsoft konto</p>
            </div>
            <div class="card-footer">
                <form asp-controller="Account" asp-action="LoginWithMicrosoftAccount" method="post">
                    @if (Model != null)
                    {
                        <input type="hidden" name="returnUrl" value="@Model.AbsoluteUri" />
                    }
                    <div class="text-center">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary">Log ind</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-6 col-sm-6 col-md-4 col-lg-4 col-xl-3 d-flex">
        <div class="card">
            <div class="card-body">
                <p class="card-text">Log ind med en Google konto</p>
            </div>
            <div class="card-footer">
                <form asp-controller="Account" asp-action="LoginWithGoogleAccount" method="post">
                    @if (Model != null)
                    {
                        <input type="hidden" name="returnUrl" value="@Model.AbsoluteUri" />
                    }
                    <div class="text-center">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary">Log ind</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-lg-2 col-xl-3">
    </div>
</div>