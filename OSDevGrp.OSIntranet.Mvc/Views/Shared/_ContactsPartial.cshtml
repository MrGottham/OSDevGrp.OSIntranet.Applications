@using Microsoft.AspNetCore.Authorization
@using OSDevGrp.OSIntranet.Mvc.Security
@inject IAuthorizationService AuthorizationService
@if (User.Identity is {IsAuthenticated: true } && (await AuthorizationService.AuthorizeAsync(User, Policies.ContactPolicy)).Succeeded)
{
    <div class="dropdown dropright dropdown-submenu">
        <button class="text-dark dropdown-item dropdown-toggle" type="button" data-toggle="dropdown">Kontakter</button>
        <ul class="dropdown-menu">
            <li class="nav-item">
                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Contact" asp-action="Contacts">Kontakter</a>
            </li>
            <li class="nav-item">
                <div class="dropdown-divider"></div>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Contact" asp-action="ContactGroups">Kontaktgrupper</a>
            </li>
            <li class="nav-item">
                <div class="dropdown-divider"></div>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Contact" asp-action="Countries">Landekoder</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Contact" asp-action="PostalCodes">Postnumre</a>
            </li>
        </ul>
    </div>
}