@model ClientSecretIdentityViewModel;
<input type="hidden" asp-for="Identifier" />
<input type="hidden" asp-for="EditMode" />
<div class="form-group">
    <label asp-for="FriendlyName"></label>
    <input asp-for="FriendlyName" class="form-control" />
    <span asp-validation-for="FriendlyName" class="text-danger"></span>
</div>
@if (Model.EditMode != EditMode.Create)
{
    <div class="form-group">
        <label asp-for="ClientId"></label>
        <input asp-for="ClientId" class="form-control" readonly="true" />
    </div>
    <div class="form-group">
        <label asp-for="ClientSecret"></label>
        <input type="password" asp-for="ClientSecret" class="form-control" readonly="true" />
    </div>
}
<partial name="_ClaimCollectionPartial" />